#include <proje.h>
#define use_portb_lcd TRUE
#include <lcd.c>
#FUSES 


void servo_pwm(unsigned long int b)
{
 output_high(pin_d7);
 delay_us(550+b); 
 output_low(pin_d7);
 delay_us(19450-b);  
}

void servo_high()
{
   output_high(pin_d7);
   delay_us(550+2046);
   output_low(pin_d7);
   delay_us(19450 - 2046);
}


void servo_low()
{
   output_high(pin_d7);
   delay_us(550+1023);
   output_low(pin_d7);
   delay_us(19450-1023);
}



void main()
{  
   set_tris_b(0x00);
   output_b(0x00);
   set_tris_d(0x00);
   output_d(0x00);
   set_tris_c(0xFF);
   output_c(0x00);
   lcd_init();
 
 
 while(TRUE)
 {
 
  if( input(pin_c1) == 0 )
  {
   delay_us(20);
   servo_high();
   output_high(pin_d0);
   printf(lcd_putc, "\fOpen!");
  }
  else if ( input(pin_c4) == 0 )
  {
   delay_us(20);
   servo_low();
   output_low(pin_d0);
   lcd_putc("\fClosed!");
  }

 } 
}
