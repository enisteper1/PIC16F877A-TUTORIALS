#include <proje.h>
#define use_portb_lcd TRUE
#include <lcd.c>
#FUSES NOPUT, NOPROTECT, HS, NOWRT, NOBROWNOUT, NOCPD, NOLVP, NOWDT
#define SERVO_PIN PIN_D7
#define LED_PIN PIN_D0

void servo_pwm(unsigned long int b)
{
 output_high(SERVO_PIN);
 delay_us(550+b); 
 output_low(SERVO_PIN);
 delay_us(19450-b);  
}

void servo_high()
{
   output_high(SERVO_PIN);
   delay_us(550+0);
   output_low(SERVO_PIN);
   delay_us(19450 - 0);
}


void servo_low()
{
   output_high(SERVO_PIN);
   delay_us(550+1023);
   output_low(SERVO_PIN);
   delay_us(19450-1023);
}



void main()
{  
   set_tris_b(0x00);
   output_b(0x00);
   
   set_tris_d(0x00);
   output_d(0x00);
   
   set_tris_c(0xFF);
   output_c(0x00);
   
   lcd_init();
 
 
 while(TRUE)
 {
 
  if( input(pin_c1) == 0 )
  {
   delay_us(20);
   servo_high();
   output_high(LED_PIN);
   printf(lcd_putc, "\fOpen!");
  }
  else if ( input(pin_c4) == 0 )
  {
   delay_us(20);
   servo_low();
   output_low(LED_PIN);
   lcd_putc("\fClosed!");
  }

 } 
}
